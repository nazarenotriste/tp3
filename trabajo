class articulo:
    def __init__(self,codigo,precio,ubicacion,estado,cantidad,puntuacion):
        self.cod=codigo
        self.pre=precio
        self.ub=ubicacion
        self.est=estado
        self.cant=cantidad
        self.punt=puntuacion


